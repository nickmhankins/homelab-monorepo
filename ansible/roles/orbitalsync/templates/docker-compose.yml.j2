---
services:
  orbital-sync:
    container_name: orbital
    image: mattwebbio/orbital-sync:1.8.2-distroless
    environment:
      PRIMARY_HOST_BASE_URL: "http://{{ primary_host }}"
      PRIMARY_HOST_PASSWORD: "{{ password }}"
      SECONDARY_HOST_1_BASE_URL: "http://{{ secondary_host }}"
      SECONDARY_HOST_1_PASSWORD: "{{ password }}"
      INTERVAL_MINUTES: 15
    restart: unless-stopped
